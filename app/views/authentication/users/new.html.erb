<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <!-- Logo -->
    <div class="flex justify-center mb-6">
      <%= image_tag('bolsa.jpg', alt: 'Logo', class: 'w-24 h-24') %>
    </div>

    <!-- Muestra de errores -->
    <% if @user.errors.any? %>
      <div class="mb-6 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold"><%= pluralize(@user.errors.count, "error") %>:</strong>
        <ul class="list-disc ml-5">
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Formulario -->
    <%= form_with(model: @user, class: 'space-y-6') do |form| %>
      <!-- Campo de Email -->
      <div>
        <%= form.label :email, class: 'block text-sm font-medium text-gray-700' %>
        <%= form.email_field :email, required: true, class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm' %>
      </div>

      <!-- Campo de Username -->
      <div>
        <%= form.label :username, class: 'block text-sm font-medium text-gray-700' %>
        <%= form.text_field :username, required: true, class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm' %>
      </div>

      <!-- Campo de Password -->
      <div>
        <%= form.label :password, class: 'block text-sm font-medium text-gray-700' %>
        <%= form.password_field :password, required: true, class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm' %>
      </div>

      <!-- BotÃ³n de Enviar -->
      <div>
        <%= form.submit t('.register'), class: 'w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary' %>
      </div>
    <% end %>
  </div>
</div>

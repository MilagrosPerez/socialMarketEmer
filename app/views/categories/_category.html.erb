<div id="<%= dom_id category %>" class="bg-white p-4 rounded-lg shadow-sm mb-4 border border-gray-200">
  <div class="flex items-center justify-between">
    <!-- Nombre de la categoría -->
    <p class="text-lg font-semibold text-gray-800">
      <%= category.name %>
    </p>

    <!-- Enlaces de edición y eliminación -->
    <div class="space-x-4">
      <%= link_to t('.edit'), edit_category_path(category), class: "text-primary hover:underline" %>
      <%= link_to t('.delete'), category_path(category),
                  data: { turbo_confirm: t('common.confirm'), turbo_method: :delete },
                  class: "text-red-600 hover:underline" %>
    </div>
  </div>
</div>

<%= form_with(model: category, class: "space-y-6") do |form| %>
  <% if category.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded-lg">
      <h2 class="text-lg font-semibold">
        <%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:
      </h2>

      <ul class="mt-2 list-disc pl-5">
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-gray-700 font-medium" %>
    <%= form.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
  </div>

  <div>
    <%= form.submit class: "bg-primary text-white px-4 py-2 rounded-lg hover:bg-primary-dark transition-colors duration-300" %>
  </div>
<% end %>

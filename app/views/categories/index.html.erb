<!-- Título principal -->
<h1 class="text-2xl font-bold text-gray-800 mb-6"><%= t('.title') %></h1>

<!-- Renderizado de categorías -->
<div class="space-y-4">
  <%= render partial: 'category', collection: @categories %>
</div>

<!-- Enlace para crear una nueva categoría -->
<div class="mt-6">
  <%= link_to t('.new'), new_category_path, class: "inline-block bg-primary text-white px-4 py-2 rounded-lg hover:bg-primary-dark transition duration-300" %>
</div>

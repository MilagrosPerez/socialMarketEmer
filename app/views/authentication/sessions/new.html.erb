<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <!-- Logo -->
    <div class="flex justify-center mb-6">
      <%= image_tag('bolsa.jpg', alt: 'Logo', class: 'w-24 h-24') %>
    </div>

    <!-- Formulario -->
    <%= form_with(url: sessions_path, class: 'space-y-6') do |form| %>
      <!-- Campo de Login -->
      <div>
        <%= form.label :login, class: 'block text-sm font-medium text-gray-700' %>
        <%= form.text_field :login, required: true, class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm' %>
      </div>

      <!-- Campo de Password -->
      <div>
        <%= form.label :password, class: 'block text-sm font-medium text-gray-700' %>
        <%= form.password_field :password, required: true, class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm' %>
      </div>

      <!-- BotÃ³n de Enviar -->
      <div>
        <%= form.submit t('.login'), class: 'w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary' %>
      </div>
    <% end %>

    <!-- Enlace para Registrarse -->
    <% unless Current.user %>
      <div class="mt-6 text-center">
        <%= link_to new_user_path, class: 'text-sm font-medium text-primary hover:underline' do %>
          <h3><%= t('.register') %></h3>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
